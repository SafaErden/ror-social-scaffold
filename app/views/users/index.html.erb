<section class="users-section">
  <ul class="users-list">
    <% @users.each do |user| %>
    <li>
      Name: <%= user.name %>
      <span class="profile-link">
        <%= link_to 'See Profile',  user_path(user), class: 'profile-link' %>
      </span>

      <% if current_user.friend?(user) %>
      Confirmed Friendship
      <% end %>


      <% unless (current_user.id == user.id) || (current_user.friend?user) %>
      <% if  (current_user.pending_friends.include?user) %>
      Pending Request
      <% elsif (current_user.friend_requests.include?user) %>
      <%= link_to "Accept", friendships_confirm_path(:user => user.id), class: 'btn btn-primary' %>
      <% elsif current_user.friend?(user) %>
      Friends
      <% else  %>
      <%= link_to "Request Friendship", friendships_friendship_request_path(:user => user.id) %>
      <% end %>
      <% end %>
    </li>
    <% end %>
  </ul>
</section>
